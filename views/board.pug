extends layout

block content
  h1= title
  p Query: #{query.rows}, #{query.cols}  
    //- Converting to number
  - var rows = Number(query.rows);
  - var cols = Number(query.cols);

  - if (!Number.isInteger(rows) || !Number.isInteger(cols)){
    p Not an Integer
    -}
  - else if (rows < 1 || rows > 10){
    p Rows should be in the range of 1 to 10
    -}
  - else if (cols < 1 || cols > 10){
    p Columns should be in the range of 1 to 10
    -}
  - else{
    table#outer  
      - for (let i = 0; i < rows; i++){ 
        tr#middle  
          - for (let j = 0; j < cols; j++){
            - if (i === j){
              td= 1
              -}
            - else if (i === j + 1){
              td= 2
              -}
            - else if (i === j - 1){
              td= i
              -}
            - else{
              td= 0
              -}
          -}
      -}
    -}